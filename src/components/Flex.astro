---
type Props = {
  direction?: 'row' | 'column';
  gapRem?: number;
  justify?:
    | 'center'
    | 'flex-start'
    | 'flex-end'
    | 'space-between'
    | 'space-around'
    | 'space-evenly';
  align?:
    | 'center'
    | 'flex-start'
    | 'flex-end'
    | 'stretch'
    | 'baseline'
    | 'normal';
};

const {
  gapRem = 0,
  direction = 'column',
  justify = 'flex-start',
  align = 'normal',
}: Props = Astro.props;
---

<div
  style={{
    display: 'flex',
    flexDirection: direction,
    gap: `${gapRem}rem`,
    justifyContent: justify,
    alignItems: align,
  }}
>
  <slot />
</div>
